CREATE TABLE Item (
    ItemName varchar(255) NOT NULL,
    Category varchar(255) NOT NULL,
    buyingPrice DECIMAL(5,2) NOT NULL
  
);

insert into Item values('shampoo', 'Toiletry',  2.00);
insert into Item values('conditioner','Toiletry', 3.00);
